<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingthy.platform.mapper.message.MessagePlatformMapper" >
  <resultMap id="BaseResultMap" type="com.kingthy.platform.entity.message.MessagePlatform" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="uuid" property="uuid" jdbcType="CHAR" />
    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
    <result column="del_flag" property="delFlag" jdbcType="BIT" />
    <result column="creator" property="creator" jdbcType="VARCHAR" />
    <result column="modifier" property="modifier" jdbcType="VARCHAR" />
    <result column="version" property="version" jdbcType="INTEGER" />
    <result column="platform_name" property="platformName" jdbcType="VARCHAR" />
    <result column="platform_desc" property="platformDesc" jdbcType="VARCHAR" />
    <result column="open_time" property="openTime" jdbcType="TIMESTAMP" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="queue_name" property="queueName" jdbcType="VARCHAR" />
  </resultMap>

  <update id="updateMessagePlatFromByUuid" parameterType="com.kingthy.platform.entity.message.MessagePlatform" >
    update message_platform
    <set >

      <if test="createDate != null" >
        create_date = #{createDate,jdbcType=TIMESTAMP},
      </if>
      <if test="modifyDate != null" >
        modify_date = #{modifyDate,jdbcType=TIMESTAMP},
      </if>
      <if test="delFlag != null" >
        del_flag = #{delFlag,jdbcType=BIT},
      </if>
      <if test="creator != null" >
        creator = #{creator,jdbcType=VARCHAR},
      </if>
      <if test="modifier != null" >
        modifier = #{modifier,jdbcType=VARCHAR},
      </if>
      <if test="version != null" >
        version = #{version,jdbcType=INTEGER},
      </if>
      <if test="platformName != null" >
        platform_name = #{platformName,jdbcType=VARCHAR},
      </if>
      <if test="platformDesc != null" >
        platform_desc = #{platformDesc,jdbcType=VARCHAR},
      </if>
      <if test="openTime != null" >
        open_time = #{openTime,jdbcType=TIMESTAMP},
      </if>
      <if test="status != null" >
        status = #{status,jdbcType=INTEGER},
      </if>
    </set>
    where uuid = #{uuid,jdbcType=VARCHAR}
  </update>

  <select id="showPlatByUuid" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT
        a.*
    FROM
        message_platform a
    WHERE
        a.del_flag = 0 AND a.uuid = #{uuid}

  </select>

  <select id="findListPage" resultType="com.kingthy.platform.dto.message.MessagePlatformDto" parameterType="com.kingthy.platform.dto.message.MessagePlatformReq">
    SELECT
      a.uuid,
      a.platform_name platformName,
      a.platform_desc platformDesc,
      a.open_time openTime,
      a.`status`
    FROM
      message_platform a
    WHERE
      a.del_flag = 0
    <if test="uuid != null and uuid != ''">
      AND a.uuid = #{uuid}
    </if>

    <if test="status != null and status != ''">
      AND a.status = #{status}
    </if>

    <if test="platformName != null and platformName != ''">
      AND a.platform_name LIKE concat('%',#{platformName},'%')
    </if>

    <if test="platformDesc != null and platformDesc != ''">
      AND a.platform_desc LIKE concat('%',#{platformDesc},'%')
    </if>

    <if test="beginTime != null and beginTime != ''">
      AND unix_timestamp(a.open_time) * 1000 &gt;= #{beginTime}
    </if>

    <if test="endTime != null and endTime != ''">
      AND unix_timestamp(a.open_time) * 1000 &lt; #{beginTime}
    </if>

  </select>
</mapper>