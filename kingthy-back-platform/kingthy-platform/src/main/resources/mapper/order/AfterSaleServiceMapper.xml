<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingthy.platform.mapper.order.AfterSaleServiceMapper">

    <resultMap id="BaseResultMap" type="com.kingthy.platform.entity.order.AfterSaleService" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uuid" property="uuid" jdbcType="CHAR" />
        <result column="order_sn" property="orderSn" jdbcType="VARCHAR" />
        <result column="goods_uuid" property="goodsUuid" jdbcType="CHAR" />
        <result column="member_uuid" property="memberUuid" jdbcType="CHAR" />
        <result column="member_name" property="memberName" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
        <result column="del_flag" property="delFlag" jdbcType="BIT" />
        <result column="creator" property="creator" jdbcType="VARCHAR" />
        <result column="modifier" property="modifier" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="apply_service_type" property="applyServiceType" jdbcType="INTEGER" />
        <result column="apply_service_name" property="applyServiceName" jdbcType="VARCHAR" />
        <result column="exchange_reason" property="exchangeReason" jdbcType="VARCHAR" />
        <result column="version" property="version" jdbcType="INTEGER" />
        <result column="shipping_number" property="shippingNumber" jdbcType="VARCHAR" />
        <result column="auditing_flag" property="auditingFlag" jdbcType="BIT" />
    </resultMap>

    <select id="selectServiceInfoByUuid" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM after_sale_service WHERE uuid = #{uuid} AND del_flag = 0

    </select>

    <select id="selectSaleServiceList" parameterType="com.kingthy.platform.dto.order.AfterSaleServiceReq"
            resultType="com.kingthy.platform.dto.order.AfterSaleServiceDto">
        SELECT
            a.order_sn orderSn,
            b.create_date orderCreateDate,
            b.payment_date paymentDate,
            b.`name` goodsName,
            b.amount,
            b.quantity,
            b.member_name memberName,
            a.apply_service_name applyServiceName,
            a.exchange_reason exchangeReason,
            a.img,
            a.create_date applyCreateDate,
            a.`status`,
            a.memo,
            a.uuid,
            g.cover
        FROM
            after_sale_service a
        LEFT JOIN order_item b ON a.order_sn = b.sn
        LEFT JOIN goods g ON a.goods_uuid = g.uuid
        WHERE
            a.del_flag = 0
        AND a.auditing_flag = 0
        <if test="status != null and status != ''">
            AND a.`status` = #{status}

        </if>
        <if test="orderSn != null and orderSn != ''">
            AND a.order_sn = #{orderSn}

        </if>
        <if test="goodsName != null and goodsName != ''">
            AND b.`name` like concat('%',#{goodsName},'%')

        </if>
        <if test="memberName != null and memberName != ''">
            AND b.member_name like concat('%',#{memberName},'%')

        </if>
        <if test="memo != null and memo != ''">
            AND a.memo like concat('%',#{memo},'%')

        </if>
        <if test="beginDate != null and beginDate != ''">
            AND unix_timestamp(a.create_date) * 1000 &gt;= #{beginDate}

        </if>
        <if test="endDate != null and endDate != ''">
            AND unix_timestamp(a.create_date) * 1000 &lt;= #{endDate}

        </if>
    </select>

    <update id="updateRejectAuditing" parameterType="com.kingthy.platform.dto.order.AfterSaleServiceReq$RejectReq">
        UPDATE after_sale_service a
            SET a.reject_reason = #{rejectReason},
             a.auditing_flag = 1,
             a.modifier = #{memberUuid},
             a.modify_date = NOW()
        WHERE a.uuid = #{uuid} AND a.del_flag = 0
    </update>

    <update id="updateStatus" parameterType="com.kingthy.platform.entity.order.AfterSaleService">
        UPDATE after_sale_service a

        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null and status != ''"> a.`status` = #{status}, </if>
            <if test="modifier != null and modifier != ''"> a.modifier = #{modifier}, </if>
            <if test="modifyDate != null"> a.modify_date = #{modifyDate}, </if>
            <if test="shippingNumber != null and shippingNumber != ''"> a.shipping_number = #{shippingNumber}, </if>
            <if test="delFlag != null and delFlag != ''"> a.del_flag = #{delFlag}, </if>
            <if test="refundsAddrUuid != null and refundsAddrUuid != ''"> a.refunds_addr_uuid = #{refundsAddrUuid}</if>
        </trim>

        WHERE a.uuid = #{uuid} AND a.del_flag = 0 AND a.auditing_flag != 1
    </update>

</mapper>
