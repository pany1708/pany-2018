  <update id ="updateGoodsNum">
    UPDATE segment_category sc
      SET
      sc.goods_num = (
      SELECT
      COUNT(g.id)
      FROM
      goods g
      WHERE
      age_segment_uuid = sc.uuid
      ) WHERE type ='0'
  </update>

  <update id="updateGoodsNumPrice">
    UPDATE segment_category sc
      SET sc.modify_date = NOW("YYYY-MM-DD HH:MM:SS"),
      sc.goods_num = (
      SELECT
      COUNT(g.id)
      FROM
      goods g
      WHERE
      standard_price BETWEEN sc.origin_value AND sc.terminal_value
      ) WHERE type ='1'
  </update>
