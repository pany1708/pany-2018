<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingthy.mapper.MemberIncomeDetailMapper">
  <resultMap id="BaseResultMap" type="com.kingthy.entity.MemberIncomeDetail" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="uuid" property="uuid" jdbcType="CHAR" />
    <result column="members_uuid" property="membersUuid" jdbcType="CHAR" />
    <result column="goods_uuid" property="goodsUuid" jdbcType="CHAR" />
    <result column="order_sn" property="orderSn" jdbcType="VARCHAR" />
    <result column="money" property="money" jdbcType="DECIMAL" />
    <result column="quantity" property="quantity" jdbcType="INTEGER" />
    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
    <result column="version" property="version" jdbcType="INTEGER" />
    <result column="creator" property="creator" jdbcType="VARCHAR" />
    <result column="modifier" property="modifier" jdbcType="VARCHAR" />
    <result column="del_flag" property="delFlag" jdbcType="BIT" />
  </resultMap>



  <select id="selectIncomeList" resultType="com.kingthy.dto.IncomeDetailDTO">
    SELECT
        a.goods_uuid goodsUuid,
        a.quantity,
        a.money,
        a.create_date creatDate
    FROM
        member_income_detail a
    WHERE
        a.members_uuid = #{membersUuid}
    AND a.del_flag = 0
    ORDER BY
        a.create_date DESC
    LIMIT #{offset}, #{pageSize}

  </select>

    <select id="countIncomeDetailByOrderSn" resultType="java.lang.Integer" parameterType="java.lang.String">
      SELECT COUNT(1) FROM member_income_detail WHERE order_sn = #{orderSn} AND del_flag = 0
    </select>

</mapper>