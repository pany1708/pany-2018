                </when>
                <when test="criterion.listValue" >
                  and ${criterion.condition}
                  <foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List" >
    id, create_date, modify_date, version, creator, modifier, orders, full_name, grade, 
    name, tree_path, area_parent_id, del_flag
  </sql>

  <select id="selectArea" resultMap="BaseResult1Map" >
      SELECT
        a1.id, a1.full_name, a1.grade, a1.name, a1.area_parent_id,
        a2.id id1, a2.full_name full_name1, a2.grade grade1, a2.name name1, a2.area_parent_id area_parent_id1,
        a3.id id2, a3.full_name full_name2, a3.grade grade2, a3.name name2, a3.area_parent_id area_parent_id2
      FROM
          area a1
      LEFT JOIN area a2 ON a2.area_parent_id = a1.id
      LEFT JOIN area a3 ON a2.id = a3.area_parent_id where a1.grade =0 and a2.grade =1 and a3.grade =2
  </select>

  <select id="selectCityInfoByAreaId" parameterType="java.lang.Integer" resultType="com.kingthy.dto.CityInfoDTO">
    SELECT
      a.full_name areaName,
      a.id areaUuid,
      b.full_name cityName,
      b.id cityUuid,
      c.full_name provinceName,
      c.id provinceUuid
    FROM
      area a
    LEFT JOIN area b ON a.area_parent_id = b.id
    LEFT JOIN area c ON b.area_parent_id = c.id
    AND b.area_parent_id IS NOT NULL
    WHERE
      a.id = #{area_uuid}
    AND a.area_parent_id IS NOT NULL
  </select>

  <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    FROM
    area
    where id = #{id}
  </select>

  <select id="queryAreaInfoList" resultMap="BaseResultMap" parameterType="com.kingthy.entity.Area">
    SELECT
      id,orders,full_name,grade,name,tree_path,area_parent_id
    FROM
     area
    WHERE
      1=1
    <if test=" grade!=null ">
      AND grade = #{grade}
    </if>
    <if test=" areaParentId!=null ">
      AND area_parent_id = #{areaParentId}
    </if>
    <if test=" name!=null and name!='' ">
      AND name = #{name}
    </if>
  </select>

  <select id="queryParentAreaInfoList" resultMap="BaseResultMap" parameterType="com.kingthy.entity.Area">
    SELECT
     id,orders,full_name,grade,name,tree_path,area_parent_id
    FROM
     area
    WHERE
      1=1
    <choose>
      <when test="grade==0">
        AND grade = 0
      </when>
      <otherwise>
        AND area_parent_id = #{areaParentId}
      </otherwise>
    </choose>
  </select>
  </mapper>