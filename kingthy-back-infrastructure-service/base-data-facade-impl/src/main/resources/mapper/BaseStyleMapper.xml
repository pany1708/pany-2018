<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingthy.mapper.BaseStyleMapper" >
  <cache/>
  <resultMap id="BaseResultMap" type="com.kingthy.entity.BaseStyle" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="uuid" property="uuid" jdbcType="CHAR" />
    <result column="creator" property="creator" jdbcType="VARCHAR" />
    <result column="modifier" property="modifier" jdbcType="VARCHAR" />
    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
    <result column="del_flag" property="delFlag" jdbcType="BIT" />
    <result column="version" property="version" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="style_sn" property="styleSn" jdbcType="VARCHAR" />
    <result column="style_name" property="styleName" jdbcType="VARCHAR" />
    <result column="style_pic" property="stylePic" jdbcType="VARCHAR" />
    <result column="season" property="season" jdbcType="VARCHAR" />
  </resultMap>

  <select id="findByPage" parameterType="com.kingthy.request.BaseStylePageReq" resultMap="BaseResultMap">
    SELECT uuid,status,style_sn,style_name,style_pic,season,create_date
    FROM
    base_style
    WHERE del_flag IS FALSE
    <if test="styleSn != null and styleSn != ''">
      AND style_sn LIKE concat('%',#{styleSn},'%')
    </if>
    <if test="styleName != null and styleName !='' ">
      AND style_name LIKE concat('%',#{styleName},'%')
    </if>
    <if test="startTime !=null">
      <![CDATA[ AND create_date  >=  #{startTime}  ]]>
    </if>
    <if test="endTime !=null "  >
      <![CDATA[ AND create_date <=  #{endTime}  ]]>
    </if>
    ORDER BY create_date DESC
  </select>

  <select id="findByPage_COUNT" resultType="Long">
    SELECT count(uuid)
    FROM
    base_style
    WHERE del_flag IS FALSE
    <if test="styleSn != null and styleSn != ''">
      AND style_sn LIKE concat('%',#{styleSn},'%')
    </if>
    <if test="styleName != null and styleName !='' ">
      AND style_name LIKE concat('%',#{styleName},'%')
    </if>
    <if test="startTime !=null">
      <![CDATA[ AND create_date  >=  #{startTime}  ]]>
    </if>
    <if test="endTime !=null "  >
      <![CDATA[ AND create_date <=  #{endTime}  ]]>
    </if>
  </select>


  <select id="findFiles" resultType="com.kingthy.dto.BaseStyleFileDto">
    SELECT uuid,style_pic as stylePic FROM
    base_style
    WHERE del_flag IS FALSE
  </select>

  <select id="findAllStyle" resultType="com.kingthy.entity.BaseStyle">
    SELECT uuid,style_sn styleSn,style_name styleName,style_pic stylePic,season
    FROM
    base_style
    WHERE del_flag IS FALSE
  </select>

  <select id="selectByUuid" resultType="com.kingthy.entity.BaseStyle" parameterType="java.lang.String">
    SELECT uuid,version,status,style_sn styleSn,style_name styleName,style_pic stylePic,season
    FROM
    base_style
    WHERE del_flag IS FALSE
    AND uuid = #{uuid}
  </select>
</mapper>