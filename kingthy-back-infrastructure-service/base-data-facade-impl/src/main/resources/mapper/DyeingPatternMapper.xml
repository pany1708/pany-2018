<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingthy.mapper.DyeingPatternMapper">
    <cache/>
    <resultMap id="BaseResultMap" type="com.kingthy.entity.DyeingPattern" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="code" property="code" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR" />
        <result column="image_length" property="imageLength" jdbcType="INTEGER" />
        <result column="image_width" property="imageWidth" jdbcType="INTEGER" />
        <result column="product_file" property="productFile" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="price" property="price" jdbcType="DECIMAL" />
        <result column="remark" property="remark" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="del_flag" property="delFlag" jdbcType="BIT" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
        <result column="creator" property="creator" jdbcType="VARCHAR" />
        <result column="modifier" property="modifier" jdbcType="VARCHAR" />
        <result column="uuid" property="uuid" jdbcType="CHAR" />
        <result column="version" property="version" jdbcType="INTEGER" />
        <result column="type_name" property="typeName" jdbcType="VARCHAR" />
        <result column="if_change_size" property="ifChangeSize" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        id, code, name, image_url, image_length, image_width, product_file, type, price,
    remark, status, del_flag, create_date, modify_date, creator, modifier, uuid, version
    </sql>

    <select id="findDyeingPatternPage" parameterType="com.kingthy.entity.DyeingPattern" resultMap="BaseResultMap">
        SELECT
        a.id ,
        a.code ,
        a.name ,
        a.image_url ,
        a.image_length ,
        a.image_width ,
        a.product_file ,
        a.type ,
        a.price ,
        a.remark ,
        a.status ,
        a.del_flag ,
        a.create_date ,
        a.modify_date ,
        a.creator ,
        a.modifier,
        a.uuid ,
        a.version,
        b.full_name type_name,
        b.change_size if_change_size
        FROM
        dyeing_pattern a
        left join source_category b on a.type=b.uuid
        WHERE a.del_flag IS FALSE
        <if test=" code !=null and code !='' ">
            AND a.code LIKE concat('%',#{code},'%')
        </if>
        <if test=" name !=null and name !='' ">
            AND a.name LIKE concat('%',#{name},'%')
        </if>
        <if test=" status != null ">
            AND a.status = #{status}
        </if>
        <if test="type !=null and type !='' ">
            AND a.type = #{type}
        </if>
        <if test="beginTime !=null and beginTime !='' ">
            and a.create_date <![CDATA[  >=]]> concat(#{beginTime},' 00:00:00')
        </if>
        <if test="endTime !=null and endTime !='' ">
            and a.create_date <![CDATA[  <=]]> concat(#{endTime},' 23:59:59')
        </if>
        ORDER BY a.create_date DESC
    </select>

    <select id="findDyeingPatternPage_COUNT"  resultType="Long" parameterType="com.kingthy.entity.DyeingPattern">
        SELECT
          COUNT(a.uuid)
        FROM
        dyeing_pattern a
        WHERE a.del_flag IS FALSE
        <if test=" code !=null and code !='' ">
            AND a.code LIKE concat('%',#{code},'%')
        </if>
        <if test=" name !=null and name !='' ">
            AND a.name LIKE concat('%',#{name},'%')
        </if>
        <if test=" status != null ">
            AND a.status = #{status}
        </if>
        <if test="type !=null and type !='' ">
            AND a.type = #{type}
        </if>
        <if test="beginTime !=null and beginTime !='' ">
            and a.create_date <![CDATA[  >=]]> concat(#{beginTime},' 00:00:00')
        </if>
        <if test="endTime !=null and endTime !='' ">
            and a.create_date <![CDATA[  <=]]> concat(#{endTime},' 23:59:59')
        </if>
    </select>

    <select id="selectDyeingPatternByCode" resultMap="BaseResultMap" parameterType="java.lang.String">
         SELECT
        <include refid="Base_Column_List"/>
        FROM
        dyeing_pattern a
        WHERE a.del_flag IS FALSE
        AND a.code = #{code}
    </select>

    <select id="selectDyeingPatternByUuid" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        dyeing_pattern a
        WHERE a.del_flag IS FALSE
        AND a.uuid = #{uuid}
    </select>

    <select id="selectCountByName" resultType="int" parameterType="java.lang.String">
        SELECT COUNT(id) FROM
        dyeing_pattern a
        WHERE a.del_flag IS FALSE
        AND a.name = #{name}
    </select>
</mapper>