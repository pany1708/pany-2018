<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingthy.mapper.AfterSaleScheduleMapper">

    <resultMap id="BaseResultMap" type="com.kingthy.entity.AfterSaleSchedule" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uuid" property="uuid" jdbcType="CHAR" />
        <result column="goods_uuid" property="goodsUuid" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
        <result column="del_flag" property="delFlag" jdbcType="BIT" />
        <result column="creator" property="creator" jdbcType="VARCHAR" />
        <result column="modifier" property="modifier" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="sale_service_uuid" property="saleServiceUuid" jdbcType="CHAR" />
        <result column="order_sn" property="orderSn" jdbcType="VARCHAR" />
        <result column="version" property="version" jdbcType="INTEGER" />
    </resultMap>

    <update id="updateSelectiveByOrderSn" parameterType="com.kingthy.entity.AfterSaleSchedule" >
        update after_sale_schedule
        <set >
            <if test="uuid != null" >
                uuid = #{uuid,jdbcType=CHAR},
            </if>
            <if test="goodsUuid != null" >
                goods_uuid = #{goodsUuid,jdbcType=VARCHAR},
            </if>
            <if test="createDate != null" >
                create_date = #{createDate,jdbcType=TIMESTAMP},
            </if>
            <if test="modifyDate != null" >
                modify_date = #{modifyDate,jdbcType=TIMESTAMP},
            </if>
            <if test="delFlag != null" >
                del_flag = #{delFlag,jdbcType=BIT},
            </if>
            <if test="creator != null" >
                creator = #{creator,jdbcType=VARCHAR},
            </if>
            <if test="modifier != null" >
                modifier = #{modifier,jdbcType=VARCHAR},
            </if>
            <if test="status != null" >
                status = #{status,jdbcType=INTEGER},
            </if>
            <if test="saleServiceUuid != null" >
                sale_service_uuid = #{saleServiceUuid,jdbcType=CHAR},
            </if>
            <if test="orderSn != null" >
                order_sn = #{orderSn,jdbcType=VARCHAR},
            </if>
            <if test="version != null" >
                version = #{version,jdbcType=INTEGER},
            </if>
            <if test="memo != null" >
                memo = #{memo,jdbcType=LONGVARCHAR},
            </if>
        </set>
        where order_sn = #{orderSn,jdbcType=VARCHAR}
    </update>

    <select id="selectScheduleByOrderSn" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM after_sale_schedule a WHERE a.del_flag = 0 AND a.order_sn = #{orderSn} ORDER BY a.create_date ASC
    </select>
</mapper>
